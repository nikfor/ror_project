= form_for @question do |f|
  = f.label :title, 'Title:'
  = f.text_field :title
  br 
  = f.label :body, 'Question essence:' 
  = f.text_area :body
  p Attachments:
  = f.fields_for :attachments, @question.attachments.build do |a|
    = render 'attachment_fields', f: a
  .fields
    = link_to_add_association 'add file', f, :attachments 

  = f.submit 'Create'